$('#edit-answer-' + '<%= @answer.id %> ' + '.answer-errors').html("<%= render 'shared/errors', resource: @answer %>");

$('.flash').html("<%= j render partial: 'shared/flash' %>");

<% if @answer.errors.empty? %>
  $('#edit-answer-' + '<%= @answer.id %>').hide();
  $('#edit-answer-link-' + '<%= @answer.id %>').show();
  $('#answer-' + '<%= @answer.id %> ' + ' td').filter(':first').text('<%= @answer.body %>');
  $('#answer-' + '<%= @answer.id %> ' + '.answer-files').html("<%= j render 'answers/files', answer: @answer %>");
  $('#answer-' + '<%= @answer.id %> ' + '.answer-links').html("<%= j render 'answers/links', answer: @answer %>");
<% end %>