$('form#edit-question-' + '<%= @question.id %> ' + '.question-errors').html("<%= render 'shared/errors', resource: @question %>");

$('.flash').html("<%= j render partial: 'shared/flash' %>");

<% unless @question.errors.present? %>
  $('#edit-question-' + '<%= @question.id %>').hide();
  $('#edit-question-link-' + '<%= @question.id %>').show();
  $('#question-' + '<%= @question.id %> ' + ' .question-title').text('<%= @question.title %>');
  $('#question-' + '<%= @question.id %> ' + ' .question-body').text('<%= @question.body %>');
  $('#question-' + '<%= @question.id %> ' + '.question-files').html("<%= j render 'questions/files', question: @question %>");
<% end %>